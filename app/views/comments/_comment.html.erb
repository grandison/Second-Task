<tr>
  <td class="comment">
    <span class="content">
      <%= link_to comment.text,comment %>
      <% if signed_in? %>
        <%= link_to "edit",edit_comment_path(comment) %>
      <% end %>
      <br />
    </span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(comment.created_at) %> ago.
    </span> <br /> <br />
  </td>
</tr>

